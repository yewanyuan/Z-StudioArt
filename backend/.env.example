# PopGraph 配置文件模板

# Z-Image-Turbo (ModelScope API)
MODELSCOPE_API_KEY=your_api_key_here
MODELSCOPE_BASE_URL=https://api-inference.modelscope.cn/
ZIMAGE_TIMEOUT=30000

# 数据库
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dbname

# Redis
REDIS_URL=redis://localhost:6379

# S3 存储 (可选)
S3_BUCKET=popgraph-images
S3_ENDPOINT=https://s3.amazonaws.com  # 或其他 S3 兼容服务端点
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=us-east-1
S3_PUBLIC_URL=  # CDN URL 前缀，如 https://cdn.example.com
S3_SIGNED_URL_EXPIRES=3600  # 签名 URL 过期时间（秒）

# JWT 认证
JWT_SECRET_KEY=your-secret-key-change-in-production

# 短信服务配置
SMS_PROVIDER=mock  # mock, aliyun, tencent

# 阿里云短信 (当 SMS_PROVIDER=aliyun 时需要)
ALIYUN_ACCESS_KEY_ID=
ALIYUN_ACCESS_KEY_SECRET=
ALIYUN_SMS_SIGN_NAME=PopGraph
ALIYUN_SMS_TEMPLATE_CODE=SMS_123456789

# 腾讯云短信 (当 SMS_PROVIDER=tencent 时需要)
TENCENT_SECRET_ID=
TENCENT_SECRET_KEY=
TENCENT_SMS_APP_ID=
TENCENT_SMS_SIGN_NAME=PopGraph
TENCENT_SMS_TEMPLATE_ID=123456

# 支付宝配置
ALIPAY_APP_ID=
ALIPAY_PRIVATE_KEY=  # 应用私钥 (RSA2)
ALIPAY_PUBLIC_KEY=   # 支付宝公钥
ALIPAY_NOTIFY_URL=https://your-domain.com/api/payment/callback/alipay
ALIPAY_RETURN_URL=https://your-domain.com/payment/success
ALIPAY_SANDBOX=true  # 是否使用沙箱环境

# 微信支付配置
WECHAT_APP_ID=
WECHAT_MCH_ID=       # 商户号
WECHAT_API_KEY=      # API密钥
WECHAT_CERT_SERIAL_NO=  # 证书序列号
WECHAT_PRIVATE_KEY=  # 商户私钥
WECHAT_NOTIFY_URL=https://your-domain.com/api/payment/callback/wechat

# 银联支付配置
UNIONPAY_MERCHANT_ID=
UNIONPAY_CERT_PATH=  # 证书文件路径
UNIONPAY_CERT_PASSWORD=
UNIONPAY_NOTIFY_URL=https://your-domain.com/api/payment/callback/unionpay
UNIONPAY_RETURN_URL=https://your-domain.com/payment/success
UNIONPAY_SANDBOX=true  # 是否使用沙箱环境
